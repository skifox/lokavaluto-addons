<odoo>
    <data>
      <!-- List view of a transaction -->
      <record model="ir.ui.view" id="transactions_tree_view">
        <field name="name">transactions.tree</field>
        <field name="model">exchangecounter.transaction</field>
        <field name="arch" type="xml">
          <tree string="Transactions Tree">
            <field name="transaction_date"/>
            <field name="create_uid"/>
            <field name="transaction_amount"/>
            <field name="status"/>
          </tree>
        </field>
      </record>


      <!-- Form view of a transaction -->
      <record model="ir.ui.view" id="transactions_form_view">
        <field name="name">transactions.form</field>
        <field name="model">exchangecounter.transaction</field>
        <field name="arch" type="xml">
          <form string="Transactions Tree">
            <sheet>
              <group>
                <field name="transaction_date"/>
                <field name="create_uid"/>
                <field name="transaction_amount"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>
    </data>
</odoo>